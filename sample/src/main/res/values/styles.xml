<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/coral</item>
        <item name="android:windowBackground">@color/material_color_white</item>
        <item name="buttonStyle">@style/SimpleButton</item>
    </style>

    <style name="SimpleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/material_color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/material_baseline_grid_5x</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
